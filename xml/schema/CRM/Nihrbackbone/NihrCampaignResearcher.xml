<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Nihrbackbone</base>
  <class>NihrCampaignResearcher</class>
  <name>civicrm_nihr_campaign_researcher</name>
  <comment>NIHR Researcher(s) for Project</comment>
  <add>5.9</add>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique NihrCampaignResearcher ID</comment>
    <add>5.9</add>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>project_id</name>
    <type>int unsigned</type>
    <comment>FK to Campaign for Project</comment>
    <add>5.9</add>
  </field>
  <foreignKey>
    <name>project_id</name>
    <table>civicrm_campaign</table>
    <key>id</key>
    <add>5.9</add>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>researcher_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact for Researcher</comment>
    <add>5.9</add>
  </field>
  <foreignKey>
    <name>researcher_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <add>5.9</add>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

</table>
